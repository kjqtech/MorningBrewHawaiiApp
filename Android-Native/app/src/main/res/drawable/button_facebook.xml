<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#3b5998" />
            <gradient android:angle="-90" android:startColor="#3b5998" android:endColor="#5B6F9B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#2C4374" />
            <solid android:color="#3b5998"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#2C4374" />
            <gradient android:angle="-90" android:startColor="#3b5998" android:endColor="#3b5998" />
        </shape>
    </item>
</selector>