<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/button_red" />
            <gradient android:angle="-90" android:startColor="@color/button_red" android:endColor="@color/button_red"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/button_red" />
            <solid android:color="@color/button_red"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/button_red" />
            <gradient android:angle="-90" android:startColor="@color/button_red" android:endColor="@color/button_red" />
        </shape>
    </item>
</selector>