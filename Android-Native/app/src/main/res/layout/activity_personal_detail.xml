<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bk"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient"/>
-->

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_back_arrow"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/back_arrow_black"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_store_location"
            android:text="Personal Details"
            android:textSize="@dimen/_22sdp"
            style="@style/BlackArchivoNarrow" />


    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_30sdp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_fname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_fname"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="First name"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_lname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_lname"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="Last name"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_email"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_email"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_password"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_gray"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_password"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_confirm_password"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_gray"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_confirm_password"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="textPassword"
                        android:hint="Confirm Password"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_phone_number"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_phone_number"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:maxLength="10"
                        android:inputType="number"
                        android:hint="Phone Number"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_street_address"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_street_address"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="Street Address"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_street_apartment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_street_apartment"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="Apartment/Floor"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/text_gray"
                    style="@style/BlackArchivoNarrow"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"/>

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:cursorVisible="true"
                    android:textColorHint="@color/text_hint"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/text_gray"
                    android:textColorHighlight="@color/gray_btn_bg_pressed_color"
                    android:textSelectHandleLeft="@color/black"
                    android:textSelectHandleRight="@color/black"
                    android:textSelectHandle="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_14sdp"
                    style="@style/BlackArchivoNarrow"
                    />


                <TextView
                    android:id="@+id/tv_city_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter city"
                    style="@style/WhiteArchivoNarrow"
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"/>


                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    style="@style/BlackArchivoNarrow"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/text_gray"
                    android:paddingLeft="@dimen/_4sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spn_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:spinnerMode="dropdown"/>

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/dropdown_image"
                        android:foregroundTint="@color/white"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/black"
                    android:layout_marginHorizontal="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/tv_state_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select state"
                    style="@style/WhiteArchivoNarrow"
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"/>


                <android.support.design.widget.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/til_city"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_city"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="City"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/til_state"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:clickable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_state"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:hint="State"
                        android:clickable="true"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/til_zipcode"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/text_gray"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/text_gray"
                    android:focusable="true"
                    android:backgroundTint="@color/text_gray"
                    android:theme="@style/TextLabel">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/aedt_zipcode"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="8dp"
                        android:inputType="number"
                        android:maxLength="5"
                        android:hint="Zipcode"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/text_gray"
                        android:textSize="@dimen/_14sdp"/>

                </android.support.design.widget.TextInputLayout>



                <Button
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/btn_save"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_red"
                    android:text="SAVE"
                    android:textSize="@dimen/_12sdp"
                    android:textAllCaps="true"
                    style="@style/WhiteArial"
                    android:layout_marginBottom="@dimen/_20sdp"/>


            </LinearLayout>






        </RelativeLayout>

    </ScrollView>


</RelativeLayout>