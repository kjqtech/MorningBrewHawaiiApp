    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingLeft="@dimen/_10sdp"
        android:id="@+id/ll_main">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_name"
                android:padding="@dimen/_4sdp"
                android:textSize="@dimen/_14sdp"
                style="@style/BlackArial"
                android:text="Gregs Pizza - East Coast"/>

            <TextView
                android:id="@+id/tv_address"
                android:padding="@dimen/_4sdp"
                android:textSize="@dimen/_10sdp"
                style="@style/BlackArial"
                android:textColor="@color/text_gray"
                android:text="123 Main Street, Brewster NY,10509"/>

            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_gravity="bottom"
                android:padding="@dimen/_4sdp"
                android:textSize="@dimen/_10sdp"
                style="@style/OverlayText"
                android:textColor="@color/wallet_holo_blue_light"
                android:text="Ph#: 6566789054"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/img_map"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/location_marker"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/card_gray"/>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/img_menu"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/restaurant_menu"
                        android:padding="@dimen/_8sdp"
                        android:background="@color/card_gray"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


