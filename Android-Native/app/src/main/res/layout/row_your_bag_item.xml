<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

     <RelativeLayout
         android:id="@+id/rl_non_free"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:paddingHorizontal="@dimen/_10sdp"
         android:paddingVertical="@dimen/_5sdp">


         <LinearLayout
             android:id="@+id/tv_item_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/item_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="1 X Shrimp Vesurvio"
                 style="@style/BlackArchivoNarrow"
                 android:textSize="@dimen/_12sdp"
                 android:paddingRight="@dimen/_60sdp"/>

             <TextView
                 android:visibility="gone"
                 android:id="@+id/item_discount_label"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 style="@style/BlackArchivoNarrow"
                 android:textSize="@dimen/_10sdp"
                 android:paddingVertical="@dimen/_2sdp"
                 android:paddingRight="@dimen/_60sdp"/>


             <LinearLayout
                 android:id="@+id/ll_advanced_menu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">


             </LinearLayout>


             <TextView
                 android:visibility="gone"
                 android:id="@+id/item_note"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Note : "
                 style="@style/BlackArchivoNarrow"
                 android:textSize="@dimen/_10sdp"
                 android:paddingVertical="@dimen/_2sdp"
                 android:paddingRight="@dimen/_60sdp"/>

         </LinearLayout>

         <TextView
             android:id="@+id/tv_btn_remove"
            android:layout_below="@id/tv_item_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="REMOVE"
             style="@style/BlackArchivoNarrow"
             android:textColor="@color/button_red"
             android:textSize="@dimen/_10sdp"/>


         <LinearLayout
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/item_actual_amount"
                 android:layout_alignParentRight="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="$149.00"
                 android:textSize="@dimen/_12sdp"
                 style="@style/BlackArchivoNarrow"
                 android:textColor="@color/order_detail_gray"
                 android:paddingHorizontal="@dimen/_5sdp"
                 android:paddingVertical="@dimen/_2sdp"/>

             <TextView
                 android:id="@+id/item_amount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="$149.00"
                 android:textSize="@dimen/_12sdp"
                 style="@style/BlackArchivoNarrow"
                 android:textColor="@color/order_detail_gray"
                 android:paddingHorizontal="@dimen/_5sdp"
                 android:paddingVertical="@dimen/_2sdp"/>


         </LinearLayout>




     </RelativeLayout>

     <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/your_bag_divider"/>

    <RelativeLayout
        android:id="@+id/rl_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/tv_item_name_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 X Shrimp Vesurvio"
                style="@style/BlackArchivoNarrow"
                android:textSize="@dimen/_12sdp"
                android:paddingRight="@dimen/_60sdp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/item_discount_label_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/BlackArchivoNarrow"
                android:textSize="@dimen/_10sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:paddingRight="@dimen/_60sdp"/>


            <LinearLayout
                android:id="@+id/ll_advanced_menu_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/item_note_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note : "
                style="@style/BlackArchivoNarrow"
                android:textSize="@dimen/_10sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:paddingRight="@dimen/_60sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn_remove_free"
            android:layout_below="@id/tv_item_name_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMOVE"
            style="@style/BlackArchivoNarrow"
            android:textColor="@color/button_red"
            android:textSize="@dimen/_10sdp"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_actual_amount_free"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$149.00"
                android:textSize="@dimen/_12sdp"
                style="@style/BlackArchivoNarrow"
                android:textColor="@color/order_detail_gray"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_2sdp"/>

            <TextView
                android:id="@+id/item_amount_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$149.00"
                android:textSize="@dimen/_12sdp"
                style="@style/BlackArchivoNarrow"
                android:textColor="@color/order_detail_gray"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_2sdp"/>


        </LinearLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/your_bag_divider"/>


</LinearLayout>