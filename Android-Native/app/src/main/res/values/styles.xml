        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/ArchivoNarrow-Regular.otf</item>
    </style>

    <style name="BlackArchivoNarrow" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/ArchivoNarrow-Regular.otf</item>
    </style>

    <style name="WhiteArialbold" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/arialbd.ttf</item>
    </style>

    <style name="BlackArialbold" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
